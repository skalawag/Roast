<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Eight oz</th>
      <th>Twelve oz</th>
      <th>Sixteen oz</th>
      <th>Eighty oz</th>
      <th>Total oz</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.profile_id %></td>
        <td><%= order.eight_oz %></td>
        <td><%= order.twelve_oz %></td>
        <td><%= order.sixteen_oz %></td>
        <td><%= order.eighty_oz %></td>
        <td><%= order.total_oz %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

